rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to listing cover images
    match /listingCovers/{allPaths=**} {
      allow read: if true;
      // Allow write only for authenticated users (to upload images)
      allow write: if request.auth != null;
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
